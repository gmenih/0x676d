{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ES2018",
    "jsx": "react",
    "lib": [ "es2018", "dom" ],
    "module": "commonjs",
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./pages/**/*.ts",
    "./pages/**/*.tsx"
  ]
}