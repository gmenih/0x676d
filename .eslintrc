{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "react": {
            "version": "16.7.0.alpha.0"
        }
    },
    "rules": {
        "space-before-function-paren": "error",
        "no-multi-spaces": "error",
        "no-multiple-empty-lines": ["error", {"max": 1}],
        "no-unused-expressions": "error"
    }
}